@{
    ViewData["Title"] = "Data Entry";
}

<!-- Dark Luxury Theme Styles -->
<style>
    /* ===== Design tokens (adjusted for better contrast) ===== */
    :root{
        --bg: #000000; 
        /* use deep charcoal surfaces so white text stays readable */
        --surface: #111315;   /* replaces any remaining white card areas */
        --surface-2: #181a1c; /* slightly lighter than card for inputs */
        --text: #f5f5f4;
        --primary: #d4af37;
        --accent: #d99aa2;
        --radius: 16px;
        --logo-url: url('/images/companylogo.png'); /* update path if needed */
        --logo-size: 100px;
    }
    /* Page base remains the same */
    body { background-color: var(--bg); color: var(--text); }
    h2, h5 { color: var(--text); }

    /* Cards */
    .card {
        background: var(--surface);
        border: 1px solid rgba(212, 175, 55, 0.22);
        border-radius: var(--radius);
        box-shadow: 0 4px 18px rgba(0, 0, 0, 0.35);
        /* force Bootstrap card bg token to dark surface */
        --bs-card-bg: var(--surface) !important;
    }

    /* ensure all card sections render dark, never white */
    .card,
    .card .card-body {
        background-color: var(--surface) !important;
    }

    /* dedicated class to override any lingering white */
    .panel-dark {
        background-color: var(--surface) !important;
        --bs-card-bg: var(--surface) !important;
    }
    .panel-dark .row,
    .panel-dark form {
        background: transparent !important;
    }

    .bg-white,
    .bg-light,
    .container .bg-white,
    .card .bg-white {
        background-color: var(--surface) !important;
        color: var(--text) !important;
    }

    .form-label,
    label {
        color: rgba(245, 245, 244, 0.95) !important;
        font-weight: 600;
    }
    .text-muted,
    .form-text,
    small,
    legend {
        color: rgba(245, 245, 244, 0.80) !important;
    }

    .form-control,
    .form-select {
        background-color: var(--surface-2);
        color: var(--text);
        border-radius: 10px;
        border: 1px solid rgba(212, 175, 55, 0.25);
        transition: all 0.2s ease-in-out;
    }
    .form-control::placeholder {
        color: rgba(245, 245, 244, 0.72);
    }
    .form-control:focus,
    .form-select:focus {
        border-color: #b8922f;
        box-shadow: 0 0 0 0.25rem rgba(212, 175, 55, 0.20);
        background-color: var(--surface-2);
        color: var(--text);
    }

    /* Force navbar text/links to white, works for navbar-light and navbar-dark */
    .navbar {
        --bs-navbar-color: #fff;
        --bs-navbar-hover-color: #fff;
        --bs-navbar-brand-color: #fff;
        --bs-navbar-brand-hover-color: #fff;
    }
    .navbar .navbar-brand,
    .navbar .nav-link,
    .navbar .navbar-toggler {
        color: #fff !important;
    }
    .navbar .nav-link:hover,
    .navbar .nav-link:focus,
    .navbar .nav-link.active {
        color: #fff !important;
        opacity: 0.9;
    }
    /* Make the hamburger visible on dark bg */
    .navbar .navbar-toggler { border-color: rgba(255,255,255,0.5); }
    .navbar .navbar-toggler-icon { filter: invert(1); }

    .navbar .navbar-brand{
      position: relative;
      padding-left: 40px;
      display: inline-flex;
      align-items: center;
    }
    .navbar .navbar-brand::before{
      content: "";
      width: var(--logo-size);
      height: var(--logo-size);
      position: absolute;
      left: 8px;
      top: 50%;
      transform: translateY(-50%);
      background-image: var(--logo-url);
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
      border-radius: 4px;
    }
    @@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi){
      .navbar .navbar-brand::before{ image-rendering: -webkit-optimize-contrast; }
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4">Data Entry</h2>
    <p class="lead">This page will allow users to enter jewellery verification records.</p>

    <!-- Filter Section -->
    <div class="card panel-dark p-4 shadow-sm mb-4">
        <h5 class="mb-3">Filter Records</h5>
        <form method="get" class="row g-3">
            <!-- Records per page -->
            <div class="col-md-3">
                <label class="form-label">Show Records</label>
                <select class="form-select" name="pageSize">
                    <option value="15">15</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
            </div>

            <!-- Filter by Year -->
            <div class="col-md-3">
                <label class="form-label">Year</label>
                <select class="form-select" name="year">
                    <option value="">All</option>
                    @for (int year = DateTime.Now.Year; year >= 2000; year--)
                    {
                        <text><option value="@year">@year</option></text>
                    }
                </select>
            </div>

            <!-- Filter by Branch Name -->
            <div class="col-md-3">
                <label class="form-label">Branch Name</label>
                <select class="form-select" name="branchName">
                    <option value="">--Select Branch--</option>
                    <option value="EL">EL - UNI DESIGN ELITE</option>
                    <option value="UD1">UD1 - UNI DESIGN UNIT 1</option>
                    <option value="UD2">UD2 - UNI DESIGN UNIT 2</option>
                    <option value="UD3">UD3 - UNI DESIGN UNIT 3</option>
                    <option value="UDI">UDI - UNI DESIGN INDIA</option>
                    <option value="UND">UND - NOUVEAU</option>
                </select>
            </div>

            <!-- Filter by Certificate Type -->
            <div class="col-md-3">
                <label class="form-label">Certificate Type</label>
                <select class="form-select" name="certificateType">
                    <option value="">All</option>
                    <option value="BIS">BIS</option>
                    <option value="DBCoO">DBCoO</option>
                    <option value="DGLA">DGLA</option>
                    <option value="DHC">DHC</option>
                    <option value="IDT">IDT</option>
                    <option value="GSI">GSI</option>
                    <option value="IGI">IGI</option>
                    <option value="PGI">PGI</option>
                    <option value="SGL">SGL</option>
                </select>
            </div>

            <!-- Filter by Pieces -->
            <div class="col-md-3">
                <label class="form-label">Pieces (Bag QN)</label>
                <input type="number" class="form-control" name="pieces" placeholder="Enter Pieces" min="1" />
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-success">Apply Filters</button>
                <a href="/DataEntry" class="btn btn-secondary">Reset</a>
            </div>
        </form>
    </div>

    <!-- Data Entry Form -->
    <div class="card panel-dark p-4 shadow-sm">
        <form method="post">
            <!-- add anti-forgery token for POST security -->
            @Html.AntiForgeryToken()
            <!-- Company Code as Branch Dropdown -->
            <div class="mb-3">
                <label class="form-label">Company Code / Branch</label>
                <select class="form-select" name="companyCode" required>
                    <option value="" disabled selected>--Select Company / Branch--</option>
                    <option value="EL">EL - UNI DESIGN ELITE</option>
                    <option value="UD1">UD1 - UNI DESIGN UNIT 1</option>
                    <option value="UD2">UD2 - UNI DESIGN UNIT 2</option>
                    <option value="UD3">UD3 - UNI DESIGN UNIT 3</option>
                    <option value="UDI">UDI - UNI DESIGN INDIA</option>
                    <option value="UND">UND - NOUVEAU</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Bag No</label>
                <input type="text" class="form-control" placeholder="Enter Bag Number" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Order No</label>
                <input type="text" class="form-control" placeholder="Enter Order Number" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Design No</label>
                <input type="text" class="form-control" placeholder="Enter Design Number" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Bag QN</label>
                <input type="number" step="0.01" min="0" class="form-control" placeholder="Enter Bag Quantity" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Customer</label>
                <input type="text" class="form-control" placeholder="Enter Customer Name" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Certificate Type</label>
                <select class="form-select" required>
                    <option value="" disabled selected>Select Certificate Type</option>
                    <option value="BIS">BIS</option>
                    <option value="DBCoO">DBCoO</option>
                    <option value="DGLA">DGLA</option>
                    <option value="DHC">DHC</option>
                    <option value="IDT">IDT</option>
                    <option value="GSI">GSI</option>
                    <option value="IGI">IGI</option>
                    <option value="PGI">PGI</option>
                    <option value="SGL">SGL</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Certificate Number</label>
                <input type="text" class="form-control" placeholder="Enter Certificate Number" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Certificate Enter Date</label>
                <input type="date" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Gross Weight (grams)</label>
                <input type="number" step="0.01" min="0" class="form-control" placeholder="Enter Gross Weight" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Doc Number</label>
                <input type="text" class="form-control" placeholder="Enter Document Number" required />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
