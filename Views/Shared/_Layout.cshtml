<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Jewellery Cerification </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" />
    <link rel="stylesheet" href="~/css/premium-ui.css" />

    <!-- In _Layout.cshtml, inside the <head> tag -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- In _Layout.cshtml, before the closing </body> tag -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">Jewellery Cerification</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="DataEntry" asp-action="Index">Data Entry</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Analytics" asp-action="Index">Analytics</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout (@User.Identity.Name)</a></li>
                    }
                    else
                    {
                        <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" asp-controller="DataEntry" asp-action="Index">Data Entry</a>
                </li>
               <li class="nav-item">
               <a class="nav-link" asp-controller="Analytics" asp-action="Index">Analytics</a></li>
               <li class="nav-item">
               <a class="nav-link" asp-controller="Account" asp-action="Welcome">Login</a></li>
                    }
               
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-5">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


